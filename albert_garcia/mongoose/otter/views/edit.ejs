<html>
    <head>
        <title>Update otter</title>
    </head>
    <body>
        <h1>Update Otter <%= otter.name %></h1>
        <% if(messages.update) { %>
            <% for (var x of messages.update) { %>
             <h3><%= x %></h3>
            <% } %>
        <% } %>
        <form action="/otters/<%= otter.id %>" method="POST">
            <label for="name">Name:</label>
            <input type="text" name="name" value="<%= otter.name %>">
            <label for="age">Age:</label>
            <input type="number" name="age" value="<%= otter.age %>">
            <label for="gender">Gender:</label>
            <select name="gender">
                <% if(otter.gender == "male") { %>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <% } else { %>
                    <option value="female">Female</option>
                    <option value="male">Male</option>
                <% } %>
            </select>
            <button type="submit">Update</button>
        </form>
        <a href="/"><button>Go back</button></a>
        <a href="/otters/<%= otter.id%>"><button>Show</button></a>
        <a href="/otters/destroy/<%= otter.id%>"><button>Destroy</button></a>
    </body>
</html>