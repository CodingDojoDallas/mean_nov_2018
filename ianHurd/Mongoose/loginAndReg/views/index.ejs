<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" href="/css/index.css">
  </head>
  <body>
    <!-- <%- JSON.stringify(messages) %> -->
    <% if(messages.registration) { %>
     <% for (var x of messages.registration) { %>
      <h3 class="alert alert-danger"><%= x %></h3>
     <% } %>
    <% } %>
    <div class="container">
      <div class="row">
        <div class="col-4">
      <form class="form-group" action="/register" method="post">
        <label for="email">Email:</label>
        <input type="text" name="email" value="" class="form-control">
        <label for="email">First Name:</label>
        <input type="text" name="first_name" value="" class="form-control">
        <label for="email">Last Name:</label>
        <input type="text" name="last_name" value="" class="form-control">
        <label for="email">Password:</label>
        <input type="text" name="password" value="" class="form-control">
        <label for="email">Birthday:</label>
        <input type="date" name="birthday" value="" class="form-control">
        <button type="submit" name="" class="btn btn-primary mt-1">Register</button>
      </form>
    </div>
    <div class="col-4 offset-1">


    <form class="form-group" action="/login" method="post">
      <label for="email">Email:</label>
      <input type="text" name="email" value="" class="form-control">
      <label for="email">Password:</label>
      <input type="password" name="password" value="" class="form-control">
      <button type="submit" name="" class="btn btn-primary mt-1">Login</button>
    </form>
    </div>
  </div>
  </div>
  </body>
</html>
