<body>
<h1> Edit <%= mongoose.name %>: </h1>
<form action="/mongeese/<%= mongoose.id %>" method="post">
	Name:<input type="text" name="name" value="<%= mongoose.name%>">
	Age:<input type="number" name="age" value="<%= mongoose.age %>">
	Gender:<select name="gender">
		<% if (mongoose.gender == "male"){ %>
		<option value="male" selected="selected">Male</option>
		<option value="female">Female</option>
		<% }else{ %>
		<option value="male">Male</option>
		<option value="female" selected="selected">Female</option>
		<% } %>
	</select>
	Favorite Food:<input type="text" name="favorite_food" value="<%= mongoose.favorite_food %>">
	<input type="submit" value="Submit">
</form>

</body>
</html>